<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="enes.com.a7_sqliteusing.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Alışveriş Listesi"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txtBaslik"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Başlık"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtAciklama"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtBaslik"
        android:layout_below="@+id/txtBaslik"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Açıklama"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnEkle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtAciklama"
        android:layout_alignStart="@+id/txtAciklama"
        android:layout_below="@+id/txtAciklama"
        android:layout_marginTop="15dp"
        android:text="Ekle" />

    <ListView
        android:id="@+id/listData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnEkle"
        android:layout_marginTop="16dp" />
</RelativeLayout>
