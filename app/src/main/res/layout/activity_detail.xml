<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="enes.com.a7_sqliteusing.Detail">

    <Button
        android:id="@+id/btnDuzenle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDDurum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Düzenle" />

    <EditText
        android:id="@+id/txtDBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Başlık"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtDAciklama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtDBaslik"
        android:layout_below="@+id/txtDBaslik"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Açıklama"
        android:inputType="textMultiLine" />

    <ToggleButton
        android:id="@+id/btnDDurum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtDAciklama"
        android:layout_alignStart="@+id/txtDAciklama"
        android:layout_below="@+id/txtDAciklama"
        android:layout_marginTop="19dp"
        android:checked="false"
        android:textOff="Aktif"
        android:textOn="Tamamlandı" />

    <TextView
        android:id="@+id/txtDTarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnDDurum"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text="Tarih" />

</RelativeLayout>
